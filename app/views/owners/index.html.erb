<h1>Property Owner List</h1>
<table>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Email</th>
    <th>Company</th>
  </tr>

  <% @owners.each do |owner| %>
  <tr>
    <td><%= owner.first_name %></td>
    <td><%= owner.last_name %></td>
    <td><%= owner.email %></td>
    <td><%= owner.company %></td>
    <td><%= link_to "Destroy - #{owner.first_name}", owner, method: :delete %></td>
  </tr>
  <% end %>

</table>
